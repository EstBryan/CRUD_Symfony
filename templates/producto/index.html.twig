{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Producto index</h1>

        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>IdProducto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Existencias</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for producto in productos %}
                <tr>
                    <td>{{ producto.idProducto }}</td>
                    <td>{{ producto.descripcion }}</td>
                    <td>{{ producto.precio }}</td>
                    <td>{{ producto.existencias }}</td>
                    <td>
                        <a href="{{ path('app_producto_show', {'idProducto': producto.idProducto}) }}" class="btn btn-success">show</a>
                        <a href="{{ path('app_producto_edit', {'idProducto': producto.idProducto}) }}" class="btn btn-primary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_producto_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
